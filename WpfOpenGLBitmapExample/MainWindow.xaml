<Window x:Class="OpenGLBitmapSourceExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenGLBitmapSourceExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" >
    <Grid Background="White">
        <Button x:Name="button_back" Content="ButtonBG" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="119" Height="39"/>
        <Image x:Name="image" Stretch="None">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="MenuItem #1" />
                    <MenuItem Header="MenuItem #2" />
                    <MenuItem Header="MenuItem #3" />
                    <MenuItem Header="MenuItem #4" />
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="119" Height="39"/>
    </Grid>
</Window>
