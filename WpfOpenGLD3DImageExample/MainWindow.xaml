<Window x:Class="WpfOpenGLD3DImageExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="White" x:Name="container">
        <Image x:Name="image" Loaded="Image_OnLoaded" Stretch="None">
            <Image.Source>
                <interop:D3DImage x:Name="d3dImage" IsFrontBufferAvailableChanged="D3dImage_OnIsFrontBufferAvailableChanged"></interop:D3DImage>
            </Image.Source>
        </Image>
    </Grid>
</Window>

